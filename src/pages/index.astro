---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import TechnicalSkills from "../components/TechnicalSkills.astro";

// Calcular edad
const birthDate = new Date(2004, 3, 14);
const today = new Date();
let age = today.getFullYear() - birthDate.getFullYear();
const monthDiff = today.getMonth() - birthDate.getMonth();
if (
	monthDiff < 0 ||
	(monthDiff === 0 && today.getDate() < birthDate.getDate())
) {
	age--;
}
---

<Layout
	title="Porfolio de Ruben - Desarrollador y programador Web"
	description="Conoce a Ruben Onsurbe, Desarrollador Web que busca trabajo en Madrid, Espa�a. Conoce sus proyectos y habilidades."
>
	<main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
		<!-- Hero Section -->
		<SectionContainer id="sobre-mi" class="mb-20">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
				<div>
					<h1
						class="text-4xl md:text-5xl font-bold mb-6 text-white leading-tight"
					>
						Bienvenido a<br /><span class="text-cyan-400"
							>mi portfolio</span
						>
					</h1>
					<p class="text-lg text-white/80 mb-4 font-medium">
						Ruben, {age} años • Elche, España
					</p>
					<p class="text-xl text-white/70 mb-8 leading-relaxed">
						Técnico Informático y Desarrollador Web apasionado por
						crear soluciones digitales innovadoras.
					</p>
					<div class="flex flex-wrap gap-3">
						<a
							href="https://www.linkedin.com/in/ruben-onsurbe-heredia-a7895a253/"
							target="_blank"
							rel="noopener"
							class="px-6 py-3 bg-cyan-500/20 border border-cyan-400/50 text-white rounded-lg hover:bg-cyan-500/30 transition font-medium"
						>
							LinkedIn
						</a>
						<a
							href="https://github.com/RubenOnsurbe"
							target="_blank"
							rel="noopener"
							class="px-6 py-3 bg-violet-500/20 border border-violet-400/50 text-white rounded-lg hover:bg-violet-500/30 transition font-medium"
						>
							GitHub
						</a>
						<a
							href="mailto:ruben.onsurbe@gmail.com"
							class="px-6 py-3 bg-pink-500/20 border border-pink-400/50 text-white rounded-lg hover:bg-pink-500/30 transition font-medium"
						>
							Email
						</a>
					</div>
				</div>
				<div
					class="relative h-96 md:h-full hidden md:flex items-center justify-center"
				>
					<div
						class="w-72 h-96 bg-gradient-to-br from-cyan-500/20 to-violet-500/20 rounded-3xl blur-3xl animate-pulse-slow"
					>
					</div>
					<img
						src="rdev.jpg"
						alt="Ruben"
						class="absolute w-64 h-80 rounded-2xl border-2 border-cyan-400/50 shadow-2xl shadow-cyan-500/20 object-cover"
					/>
				</div>
			</div>
		</SectionContainer>

		<!-- Experiencia -->
		<SectionContainer id="experiencia" class="mb-20">
			<h2
				class="text-4xl font-bold mb-12 text-white flex items-center gap-3"
			>
				<span
					class="w-1 h-10 bg-gradient-to-b from-cyan-400 to-blue-500 rounded-full"
				></span>
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<!-- Educación -->
		<SectionContainer id="educacion" class="mb-20">
			<h2
				class="text-4xl font-bold mb-12 text-white flex items-center gap-3"
			>
				<span
					class="w-1 h-10 bg-gradient-to-b from-pink-400 to-rose-500 rounded-full"
				></span>
				Educación
			</h2>
			<Education />
		</SectionContainer>

		<!-- Proyectos -->
		<SectionContainer id="proyectos" class="mb-20">
			<h2
				class="text-4xl font-bold mb-12 text-white flex items-center gap-3"
			>
				<span
					class="w-1 h-10 bg-gradient-to-b from-violet-400 to-purple-500 rounded-full"
				></span>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<!-- Habilidades -->
		<SectionContainer id="habilidades-tecnicas">
			<h2
				class="text-4xl font-bold mb-12 text-white flex items-center gap-3"
			>
				<span
					class="w-1 h-10 bg-gradient-to-b from-pink-400 to-rose-500 rounded-full"
				></span>
				Habilidades Técnicas
			</h2>
			<TechnicalSkills />
		</SectionContainer>
	</main>
</Layout>
