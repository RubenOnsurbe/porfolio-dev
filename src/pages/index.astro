---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
import Gmail from "../icons/Gmail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Porfolio de Ruben - Desarrollador y programador Web "
	description="Conoce a Ruben Onsurbe, Desarrollador Web que busca trabajo en Madrid, España. Conoce sus proyectos y habilidades."
>
	<main class="px-4">
		<SectionContainer id="sobre-mi" class="py-44 pb-20">
			<div class="flex gap-4 mb-4 items-center">
				<h1
					class="text-white text-2xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
				>
					Hey, soy Ruben
				</h1>
				<a
					href="https://www.linkedin.com/in/ruben-onsurbe-heredia-a7895a253/"
					target="_blank"
					rel="noopener"
					class="flex justify-center pb-10 items-center transition md:justify-center md:hover:scale-105"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</div>

			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
				Desarrollador Web Junior recien titulado en Desarrollo de
				aplicaciones Web. Me encanta el mundo de la programación y la
				tecnología, siempre estoy aprendiendo cosas nuevas y mejorando
				mis habilidades. Me gusta trabajar en equipo y aportar mi
				granito de arena en los proyectos en los que participo. De
				Madrid, España.
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<a
					target="_blank"
					rel="noopener"
					class="bg-white/5 rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 transition hover:bg-white/10 hover:scale-110 text-xs lg:text-base"
					href="https://www.linkedin.com/in/ruben-onsurbe-heredia-a7895a253/"
				>
					<Linkedin class="size-4 md:size-6" />LinkedIn
				</a>

				<a
					target="_blank"
					rel="noopener"
					class="bg-white/5 rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 transition hover:bg-white/10 hover:scale-110 text-xs lg:text-base"
					href="https://github.com/RubenOnsurbe"
				>
					<Github class="size-4 md:size-6" />Github
				</a>
				<a
					target="_blank"
					rel="noopener"
					class="bg-white/5 rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 transition hover:bg-white/10 hover:scale-110 text-xs lg:text-base"
					href="mailto:ruben.onsurbe@gmail.com"
				>
					<Gmail class="size-4 md:size-6" />ruben.onsurbe@gmail.com
				</a>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia" class="py-30 pb-20">
			<h2 class="text-4xl font-semibold mb-6 flex gap-x-2 items-center">
				<Briefcase class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2 class="text-4xl font-semibold mb-6 flex gap-x-2 items-center">
				<CodeIcon class="size-7 text-white" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
