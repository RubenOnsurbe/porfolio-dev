---

<ol class="relative space-y-8">
	<!-- Línea vertical central -->
	<div class="absolute left-6 top-0 bottom-0 w-1 bg-gradient-to-b from-cyan-500 via-violet-500 to-pink-500 shadow-lg shadow-cyan-500/50"></div>
	
	{
		EXPERIENCE.map((experience) => (
			<li class="relative pl-20">
				<!-- Punto en la línea -->
				<div class="absolute left-0 top-2 w-12 h-12 rounded-full border-2 border-cyan-400 bg-black shadow-lg shadow-cyan-500/60 flex items-center justify-center group/dot hover:border-violet-400 hover:shadow-violet-500/60 transition-all duration-300">
					<div class="w-3 h-3 rounded-full bg-gradient-to-br from-cyan-400 to-violet-400"></div>
				</div>
				<ExperienceItem {...experience} />
			</li>
		))
	}
</ol>
