---
const skills = {
    frontend: [
        {
            name: "Angular",
            description:
                "Implementé complejas interfaces de usuario con Angular para proyectos corporativos.",
            experience: "1 año",
        },
        {
            name: "Astro",
            description:
                "Desarrollé sitios web estáticos con Astro, un nuevo marco de trabajo para la web moderna.",
            experience: "6 meses",
        },
    ],
    backend: [
        {
            name: "Laravel",
            description:
                "Desarrollé aplicaciones web y APIs RESTful con Laravel.",
            experience: "1 año",
        },
    ],
};

const getImagePath = (framework: string) =>
    `/frameworks/${framework.toLowerCase()}.webp`;
---

<div class="space-y-12">
    <div class="animate-fade-in">
        <h3 class="text-3xl font-bold mb-8 flex items-center gap-3">
            <span
                class="w-1 h-10 bg-gradient-to-b from-primary to-secondary rounded-full"
            ></span>
            Frontend
        </h3>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 list-none">
            {
                skills.frontend.map((skill) => (
                    <li class="group flex flex-col items-start p-6 rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/5 hover:border-primary/30 hover:bg-gradient-to-br hover:from-primary/10 hover:to-white/5 transition-all duration-300 hover:shadow-lg hover:shadow-primary/20">
                        <div class="relative mb-4 overflow-hidden rounded-xl w-full">
                            <img
                                src={getImagePath(skill.name)}
                                alt={skill.name}
                                class="w-full h-40 object-contain hover:scale-110 transition-transform duration-300 ease-in-out group-hover:filter group-hover:brightness-110"
                            />
                        </div>
                        <div class="w-full">
                            <h4 class="text-xl font-bold bg-gradient-to-r from-white to-white/80 bg-clip-text text-transparent mb-2">
                                {skill.name}
                            </h4>
                            <p class="text-sm text-white/70 mb-3 leading-relaxed">
                                {skill.description}
                            </p>
                            <p class="text-xs font-semibold text-primary/80 uppercase tracking-wide">
                                {skill.experience}
                            </p>
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
    <div class="animate-fade-in" style="animation-delay: 0.1s;">
        <h3 class="text-3xl font-bold mb-8 flex items-center gap-3">
            <span
                class="w-1 h-10 bg-gradient-to-b from-secondary to-accent rounded-full"
            ></span>
            Backend
        </h3>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 list-none">
            {
                skills.backend.map((skill) => (
                    <li class="group flex flex-col items-start p-6 rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/5 hover:border-secondary/30 hover:bg-gradient-to-br hover:from-secondary/10 hover:to-white/5 transition-all duration-300 hover:shadow-lg hover:shadow-secondary/20">
                        <div class="relative mb-4 overflow-hidden rounded-xl w-full">
                            <img
                                src={getImagePath(skill.name)}
                                alt={skill.name}
                                class="w-full h-40 object-contain hover:scale-110 transition-transform duration-300 ease-in-out group-hover:filter group-hover:brightness-110"
                            />
                        </div>
                        <div class="w-full">
                            <h4 class="text-xl font-bold bg-gradient-to-r from-white to-white/80 bg-clip-text text-transparent mb-2">
                                {skill.name}
                            </h4>
                            <p class="text-sm text-white/70 mb-3 leading-relaxed">
                                {skill.description}
                            </p>
                            <p class="text-xs font-semibold text-secondary/80 uppercase tracking-wide">
                                {skill.experience}
                            </p>
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</div>
